<config>
    <site_status>200</site_status><!-- 200,404,warn,error -->
    <is_show_modal>0</is_show_modal><!-- 0不显示,1显示 -->
    <show_modal_times>1</show_modal_times><!-- 0代表无限制 -->
    <modal_config>
        <![CDATA[
            <div class="overlay" id="overlay_status_modal"></div>
            <modal_area id="status_modal">
                <modal>
                    <modal_title_area>
                        <modal_title>状态弹窗</modal_title>
                    </modal_title_area>
                    <modal_content><p>这是一个状态弹窗</p></modal_content>
                    <modal_button_area>
                        <modal_button_group>
                            <modal_button_list>
                                <custom-button data="modal|normal|||false||" js="hideModal(this);" text="关闭"></custom-button>
                            </modal_button_list>
                        </modal_button_group>
                    </modal_button_area>
                </modal>
            </modal_area>
        ]]>
    </modal_config>
</config>
